{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: g++ build active file (debug)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/bin/debug/${fileBasenameNoExtension}.debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: /usr/bin/g++",
            "isTestCommand": true,
            "echoCommand": true
        },
        {
            "type": "process",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-O3",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "compiler: /usr/bin/g++",
            "isBuildCommand": true,
            "echoCommand": true
        }
    ]
}
